 editorconfig.org

# top-most EditorConfig file
root = true

# Default settings:
# A newline ending every file
# Use 4 tabs as indentation

[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

[*.md]
insert_final_newline = true
trim_trailing_whitespace = false # Avoid editor remove two spaces at end of line.